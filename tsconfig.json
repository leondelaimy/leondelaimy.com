{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@components": ["src/components"],
      "@images": ["src/images"],
      "@pages": ["src/pages"]
    }
  }
}
